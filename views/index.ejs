<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>

  <%- include('./partials/nav.ejs') %>
  


  <div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <ul>
        <% blogs.forEach(blog => { %>
          <li>
            <h3> class = "title" <%= blog.title %></h3>
            <p>class ="snippet" <%= blog.snippet %></p>
          </li>
        <% }) %>
    <% }else { %>
      <p>No blogs available</p>
    <% } %>
      </ul>
  </div>
  <%- include('./partials/footer.ejs') %>

</body>
</html>
